.form-box {
    padding: 30px;
    width: 100%;
    max-width: 340px;
    box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.14);
    border-radius: 12px;

    h2 {
        margin-bottom: 40px;
    }

    .form-item {
        margin-bottom: 16px;
    }

    .form-actions {
        display: flex;
        flex-direction: column;
        gap: 14px;
        text-align: center;
        margin-top: 50px;
        
        a {
            font-weight: 500;
            font-size: 13px;
        }
    }
}